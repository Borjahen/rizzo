{
  "name": "@lonelyplanet/open-planet-node",
  "version": "2.46.1",
  "main": "dist/index",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "NODE_ENV=test jest",
    "docs": "typedoc src --out docs --mode file && open docs/index.html"
  },
  "dependencies": {
    "extendable-error": "^0.1.5",
    "inversify": "^4.1.0",
    "isomorphic-fetch": "^2.2.1",
    "pluralize": "^5.0.0",
    "reflect-metadata": "^0.1.10",
    "request": "^2.81.0"
  },
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/lodash": "^4.14.102",
    "@types/node": "^7.0.14",
    "jest": "^19.0.2",
    "nock": "^9.2.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.1.0",
    "tslint-eslint-rules": "^4.0.0",
    "typedoc": "^0.8.0",
    "typescript": "^2.7.2"
  },
  "typings": [
    "dist"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "dist",
      "node_modules"
    ],
    "setupFiles": [
      "./testSetup.js"
    ]
  }
}
